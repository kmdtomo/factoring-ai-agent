{
  "version": 2,
  "buildCommand": "pnpm run build && mkdir -p public && echo '{\"status\":\"ok\"}' > public/index.html",
  "outputDirectory": "public",
  "installCommand": "pnpm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 300
    }
  }
}
